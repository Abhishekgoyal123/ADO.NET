@using Coditas.EComm.Entities
@model Tuple<List<Category>,List<Product>>
@{
    ViewData["Title"] = "Index";
}
<h1>SubCategory ---- Product List</h1>
<h3>List of Subategories</h3>


@if(@ViewBag.ID==null){
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                CategoryId
            </th>
            <th>
                CategoryName
            </th>
            <th>
                BasePrice
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasePrice)
                </td>
                <td>
                    @Html.ActionLink("ShowDetails", "ShowDetails", new { id=item.CategoryId })
                </td>
            </tr>
        }
    </tbody>
</table>
}











